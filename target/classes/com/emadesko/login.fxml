<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" fx:controller="com.emadesko.controllers.CompteController"
      spacing="10" alignment="CENTER" style="-fx-background-color: #f4f4f4;" prefWidth="300" prefHeight="400">
    <Label text="Connexion" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
    
    <VBox spacing="5" alignment="CENTER">
        <Label text="Login:"/>
        <TextField fx:id="loginField" promptText="Entrez votre login" maxWidth="200"/>
        
        <Label text="Mot de passe:"/>
        <PasswordField fx:id="passwordField" promptText="Entrez votre mot de passe" maxWidth="200"/>
    </VBox>
    
    <Button fx:id="loginButton" text="Se connecter" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" maxWidth="200"/>
</VBox>
